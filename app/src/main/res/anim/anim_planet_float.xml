<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/accelerate_decelerate_interpolator">
    
    <!-- Ultra Majestic Float (Vertical) -->
    <translate
        android:fromYDelta="0"
        android:toYDelta="-6%p"
        android:duration="9000"
        android:repeatMode="reverse"
        android:repeatCount="infinite"/>
    
    <!-- Wide Drift (Horizontal) -->
    <translate
        android:fromXDelta="0"
        android:toXDelta="4%p"
        android:duration="13000"
        android:repeatMode="reverse"
        android:repeatCount="infinite"/>
    
    <!-- Alive Swaying (Rotation - "Ligeramente animado") -->
    <rotate
        android:fromDegrees="-3"
        android:toDegrees="3"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="11000"
        android:repeatMode="reverse"
        android:repeatCount="infinite"/>

    <!-- Breathing Scale -->
    <scale
        android:fromXScale="0.98"
        android:fromYScale="0.98"
        android:toXScale="1.02"
        android:toYScale="1.02"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="7000"
        android:repeatMode="reverse"
        android:repeatCount="infinite"/>
</set>

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_little_prince"
    tools:context=".ui.main.MainActivity">

    <!-- ULTRA MEGA PREMIUM Floating Stars (20 stars) - Layered BEHIND content -->
    <include layout="@layout/layout_starry_background" />

    <!-- Transparent App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:titleTextColor="?attr/colorOnSurface">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:paddingEnd="16dp">
                
                <TextView
                    android:id="@+id/tvTrialBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_badge_trial"
                    android:text="@string/trial_badge"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@id/tvTrialRemaining"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp"/>
                    
                <TextView
                    android:id="@+id/tvTrialRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="46h remaining"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="11sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="12dp"/>
                    

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Hero Timer Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuickTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_max="600dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="32dp">

                    <TextView
                        android:id="@+id/tvQuickStartHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quick_start"
                        android:textAllCaps="true"
                        android:letterSpacing="0.15"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Timer Running Status Row (Hidden by default) -->
                    <LinearLayout
                        android:id="@+id/timerStatusRow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/bg_timer_running_status"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/tvQuickStartHeader"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/tvTimerStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/timer_running"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_gold"
                            android:drawablePadding="8dp"
                            app:drawableStartCompat="@drawable/ic_timer"
                            app:drawableTint="@color/primary_gold"/>

                        <ImageButton
                            android:id="@+id/btnStopTimerFromMain"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_stop_button_ripple"
                            android:src="@drawable/ic_premium_stop"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/stop_timer"/>
                    </LinearLayout>

                    <!-- Timer Controls -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecreaseDuration"
                        style="@style/Widget.ZzzTimerPro.Button.Icon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:icon="@drawable/ic_remove"
                        app:iconTint="?attr/colorPrimary"
                        app:iconSize="28dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:layout_constraintTop_toBottomOf="@id/timerStatusRow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvTimerDisplay"
                        android:layout_marginTop="24dp"/>

                    <TextView
                        android:id="@+id/tvTimerDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="30"
                        android:textSize="80sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="sans-serif-light"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="@id/btnDecreaseDuration"
                        app:layout_constraintBottom_toBottomOf="@id/btnDecreaseDuration"
                        app:layout_constraintStart_toEndOf="@id/btnDecreaseDuration"
                        app:layout_constraintEnd_toStartOf="@id/btnIncreaseDuration"/>
                        
                    <TextView
                        android:id="@+id/tvMinLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/minutes"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintTop_toBottomOf="@id/tvTimerDisplay"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="-8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIncreaseDuration"
                        style="@style/Widget.ZzzTimerPro.Button.Icon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:icon="@drawable/ic_add"
                        app:iconTint="?attr/colorPrimary"
                        app:iconSize="28dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:layout_constraintTop_toTopOf="@id/btnDecreaseDuration"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvTimerDisplay"/>

                    <!-- Slider -->
                    <SeekBar
                        android:id="@+id/seekBarDuration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:progressTint="?attr/colorPrimary"
                        android:thumbTint="?attr/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@id/tvMinLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Sound Selection -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSoundSelector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorOutlineVariant"
                        app:cardBackgroundColor="?attr/colorSurface"
                        app:layout_constraintTop_toBottomOf="@id/seekBarDuration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_music_note"
                                app:tint="?attr/colorPrimary"/>
                                
                            <TextView
                                android:id="@+id/tvSelectedSound"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="@string/sound_soft_rain"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurface"/>
                                
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartTimer"
                        style="@style/Widget.ZzzTimerPro.Button.Primary"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:text="@string/start_timer"
                        app:cornerRadius="28dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/cardSoundSelector"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Features Grid -->
            <TextView
                android:id="@+id/tvHeaderFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/features"
                android:textSize="13sp"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorHint"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardQuickTimer"/>

            <LinearLayout
                android:id="@+id/gridFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvHeaderFeatures"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Ambient Sounds -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAmbientSounds"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorOutlineVariant"
                        app:cardBackgroundColor="?attr/colorSurface">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_music_note"
                                app:tint="?attr/colorSecondary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ambient_sounds"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Breathing Exercises -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardBreathing"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorOutlineVariant"
                        app:cardBackgroundColor="?attr/colorSurface">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_breathing"
                                app:tint="?attr/colorPrimary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/breathing_exercises"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
                
                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginTop="16dp">

                    <!-- Sleep Tracking -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSleepTracking"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorOutlineVariant"
                        app:cardBackgroundColor="?attr/colorSurface">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_moon"
                                app:tint="?attr/colorTertiary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sleep_tracking"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Statistics -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardStatistics"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorOutlineVariant"
                        app:cardBackgroundColor="?attr/colorSurface">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_statistics"
                                app:tint="?attr/colorSecondary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/statistics"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Settings Button: Premium Gold Vector -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_premium_settings"
                android:scaleType="fitCenter"
                android:elevation="12dp"
                android:stateListAnimator="@null"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/gridFeatures"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/settings"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Gradient (Deep Night Sky) -->
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#0B1026"
                android:centerColor="#1B2456"
                android:endColor="#2B32B2"
                android:type="linear"/>
        </shape>
    </item>
    
    <!-- Stars (Denser Starry Night) -->
    <!-- Static stars removed to ensure all visible stars are animated via layout inclusion -->

    <!-- Moon (Top Right) -->
    <item 
        android:drawable="@drawable/bg_moon"
        android:top="40dp" 
        android:right="20dp" 
        android:width="100dp" 
        android:height="100dp" />
</layer-list>

        android:pathData="M78,40 C75,45 80,35 85,32 C90,28 95,30 100,32 C105,35 110,40 105,45 C105,38 100,35 90,35 C82,35 78,40 78,40 Z"
        android:fillColor="#FFD54F"/>
    <path
        android:pathData="M88,32 L92,25 L96,32 Z" 
        android:fillColor="#FFD54F"/> <!-- Top spike -->

    <!-- Outfit (Green Jumpsuit) -->
    <!-- Torso -->
    <path
        android:pathData="M85,55 L95,55 L100,85 L80,85 Z"
        android:fillColor="#66BB6A"/> <!-- Green -->
    <!-- Arms -->
    <path
        android:pathData="M85,60 L75,75"
        android:strokeColor="#66BB6A"
        android:strokeWidth="5"
        android:strokeLineCap="round"/>
    <path
        android:pathData="M95,60 L105,75"
        android:strokeColor="#66BB6A"
        android:strokeWidth="5"
        android:strokeLineCap="round"/>
        
    <!-- Legs (Sitting/Dangling) -->
    <path
        android:pathData="M85,85 L85,95 L95,95 L95,85 Z"
        android:fillColor="#F5F5F5"/> <!-- Pants/White variant or Green -->
     <path
        android:pathData="M85,85 L80,105"

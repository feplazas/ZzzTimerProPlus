    <path
        android:pathData="M95,55 C110,50 120,40 140,50 C160,60 170,40 180,45"
        android:strokeColor="#FF7043"
        android:strokeWidth="3"
        android:strokeLineCap="round"/>

    <!-- THE ROSE (Next to him) -->
    <!-- Stem -->
    <path 
        android:pathData="M60,60 Q55,50 58,45"
        android:strokeColor="#4CAF50"
        android:strokeWidth="2"
        android:strokeLineCap="round"/>
    <!-- Leaves -->
    <path
        android:pathData="M58,55 L53,53 M58,50 L63,48"
        android:strokeColor="#4CAF50"
        android:strokeWidth="1.5"
        android:strokeLineCap="round"/>
    <!-- Flower Head -->
    <path
        android:pathData="M58,45 m-4,0 a4,4 0,1,1 8,0 a4,4 0,1,1 -8,0"
        android:fillColor="#E91E63"/>
    <!-- Glass Globe (Dome) -->
    <path
        android:pathData="M58,60 m-10,0 a10,14 0,1,1 20,0 a10,14 0,1,1 -20,0"
        android:fillColor="#20FFFFFF"
        android:strokeColor="#60FFFFFF"
        android:strokeWidth="1"/>

</vector>

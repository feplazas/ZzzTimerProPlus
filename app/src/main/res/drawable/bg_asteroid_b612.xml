<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="200dp"
    android:height="200dp"
    android:viewportWidth="200"
    android:viewportHeight="200">

    <!-- ATMOSPHERE GLOW (Soft Outer Halo) -->
    <path
        android:pathData="M100,100 m-85,0 a85,85 0,1,1 170,0 a85,85 0,1,1 -170,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="80"
                android:centerY="60"
                android:gradientRadius="100"
                android:type="radial">
                <item android:offset="0" android:color="#00FFFFFF"/>
                <item android:offset="0.8" android:color="#1AFFFFFF"/>
                <item android:offset="1" android:color="#00FFFFFF"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Asteroid B-612 Body (Premium Golden/Orange) -->
    <path
        android:pathData="M100,100 m-80,0 a80,80 0,1,1 160,0 a80,80 0,1,1 -160,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="70"
                android:centerY="50"
                android:gradientRadius="180"
                android:type="radial">
                <item android:offset="0" android:color="#FFFFEB3B"/> <!-- Brighter Highlight -->
                <item android:offset="0.4" android:color="#FFFDD835"/> <!-- Gold -->
                <item android:offset="0.7" android:color="#FFF57F17"/> <!-- Deep Orange -->
                <item android:offset="1" android:color="#FFE65100"/> <!-- Shadow -->
            </gradient>
        </aapt:attr>
    </path>

    <!-- CRATERS (Smoother, Organic) -->
    <path
        android:pathData="M130,80 m-15,0 a15,12 0,1,1 30,0 a15,12 0,1,1 -30,0"
        android:fillColor="#30E65100"/> <!-- More subtle -->
    <path
        android:pathData="M130,80 m-12,0 a12,9 0,1,1 24,0 a12,9 0,1,1 -24,0"
        android:fillColor="#20BF360C"/> <!-- Inner shadow -->

    <path
        android:pathData="M60,120 m-10,0 a10,8 0,1,1 20,0 a10,8 0,1,1 -20,0"
        android:fillColor="#30E65100"/>
        
    <path
        android:pathData="M110,140 m-8,0 a8,6 0,1,1 16,0 a8,6 0,1,1 -16,0"
        android:fillColor="#30E65100"/>

    <!-- VOLCANOES (Curved/Organic - No Triangles) -->
    <!-- Volcano 1 (Active) -->
    <path
        android:pathData="M50,70 Q60,35 70,70 L70,70 Z"
        android:strokeWidth="0" 
        android:fillColor="#EF6C00"/>
    <!-- Volcano 1 Lip/Mouth -->
    <path
        android:pathData="M60,45 m-6,0 a6,2.5 0,1,1 12,0 a6,2.5 0,1,1 -12,0"
        android:fillColor="#3E2723"/>

    <!-- Volcano 2 (Extinct) -->
    <path
        android:pathData="M90,55 Q100,15 110,55 Z"
        android:fillColor="#F57C00"/>
        
    <!-- Volcano 3 (Extinct) -->
    <path
        android:pathData="M140,110 Q148,80 156,110 Z"
        android:fillColor="#F57C00"/>
        
    <!-- LITTLE PRINCE SCARF (More Flowing) -->
    <!-- Neck -->
    <path
        android:pathData="M95,35 Q100,42 105,35 L105,45 Q100,52 95,45 Z"
        android:fillColor="#FF5722"/>
    
    <!-- Flowing Tail (Dynamic S-Curve) -->
    <path
        android:pathData="M95,40 C80,40 60,20 30,50 L35,60 C60,35 80,55 95,45 Z"
        android:fillColor="#FF5722"/>
    <path
        android:pathData="M30,50 C20,60 10,55 0,70 L5,80 C15,65 30,75 35,60 Z"
        android:fillColor="#F4511E"/>

    <!-- ROSE (Tiny Detail on Volcano) -->
    <!-- Stem/Leaves -->
    <path 
        android:pathData="M60,45 Q55,30 60,25"
        android:strokeColor="#4CAF50"
        android:strokeWidth="1.5"
        android:strokeLineCap="round"/>
    <!-- Flower -->
    <path
        android:pathData="M60,25 m-3,0 a3,3 0,1,1 6,0 a3,3 0,1,1 -6,0"
        android:fillColor="#E91E63"/>

    <!-- GLASS GLOBE (Over Rose) -->
    <path
        android:pathData="M60,45 m-8,0 a8,12 0,1,1 16,0 a8,12 0,1,1 -16,0"
        android:fillColor="#20FFFFFF"
        android:strokeColor="#40FFFFFF"
        android:strokeWidth="0.5"/>

</vector>

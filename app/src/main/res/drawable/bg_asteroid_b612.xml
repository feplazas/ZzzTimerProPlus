    <path
        android:pathData="M78,105 L82,105 L82,110 L78,110 Z"
        android:fillColor="#5D4037"/>
    <path
        android:pathData="M98,105 L102,105 L102,110 L98,110 Z"
        android:fillColor="#5D4037"/>

    <!-- Belt (Orange) -->
    <path
        android:pathData="M83,75 L97,75"
        android:strokeColor="#FFA726"
        android:strokeWidth="3"/>

    <!-- Scarf (Iconic Flowing) -->
    <!-- Neck wrap -->
    <path
        android:pathData="M85,55 L95,55"
        android:strokeColor="#FF5722"
        android:strokeWidth="4"
        android:strokeLineCap="round"/>
    <!-- Flowing Trail -->
    <path
        android:pathData="M95,55 C110,50 120,40 140,50 C160,60 170,40 180,45"
        android:strokeColor="#FF5722"
        android:strokeWidth="8"
        android:strokeLineCap="round"/>

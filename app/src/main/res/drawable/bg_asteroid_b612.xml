<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="200dp"
    android:height="200dp"
    android:viewportWidth="200"
    android:viewportHeight="200">

    <!-- ATMOSPHERE GLOW (Soft Outer Halo) -->
    <path
        android:pathData="M100,100 m-85,0 a85,85 0,1,1 170,0 a85,85 0,1,1 -170,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="80"
                android:centerY="60"
                android:gradientRadius="100"
                android:type="radial">
                <item android:offset="0" android:color="#00FFFFFF"/>
                <item android:offset="0.8" android:color="#1AFFFFFF"/>
                <item android:offset="1" android:color="#00FFFFFF"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Asteroid B-612 Body (Premium Golden/Orange) -->
    <path
        android:pathData="M100,100 m-80,0 a80,80 0,1,1 160,0 a80,80 0,1,1 -160,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="70"
                android:centerY="50"
                android:gradientRadius="180"
                android:type="radial">
                <item android:offset="0" android:color="#FFFFEB3B"/> <!-- Brighter Highlight -->
                <item android:offset="0.4" android:color="#FFFDD835"/> <!-- Gold -->
                <item android:offset="0.7" android:color="#FFF57F17"/> <!-- Deep Orange -->
                <item android:offset="1" android:color="#FFE65100"/> <!-- Shadow -->
            </gradient>
        </aapt:attr>
    </path>

    <!-- CRATERS (Subtle Background Detail) -->
    <path
        android:pathData="M130,80 m-15,0 a15,12 0,1,1 30,0 a15,12 0,1,1 -30,0"
        android:fillColor="#30E65100"/> 
    <path
        android:pathData="M130,80 m-12,0 a12,9 0,1,1 24,0 a12,9 0,1,1 -24,0"
        android:fillColor="#20BF360C"/>

    <path
        android:pathData="M60,120 m-10,0 a10,8 0,1,1 20,0 a10,8 0,1,1 -20,0"
        android:fillColor="#30E65100"/>
        
    <path
        android:pathData="M110,140 m-8,0 a8,6 0,1,1 16,0 a8,6 0,1,1 -16,0"
        android:fillColor="#30E65100"/>

    <!-- THE LITTLE PRINCE (Sitting on top edge) -->
    
    <!-- Skin (Head) -->
    <path
        android:pathData="M90,45 m-12,0 a12,12 0,1,1 24,0 a12,12 0,1,1 -24,0"
        android:fillColor="#FFE0B2"/> <!-- Peach skin -->

    <!-- Hair (Spiky Gold) -->
